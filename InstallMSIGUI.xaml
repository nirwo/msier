<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        Title="Remote MSI Wizard" Height="600" Width="780"
        WindowStartupLocation="CenterScreen"
        Background="#1e1e1e" Foreground="White"
        FontFamily="Segoe UI" FontSize="14">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,10">
            <TextBlock Text="Remote MSI Installer" FontSize="22" FontWeight="Bold" Foreground="#00BFFF" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="CSV File:" Width="80" VerticalAlignment="Center"/>
                <TextBox Name="CsvPath" Width="540" Margin="0,0,10,0"/>
                <Button Name="BrowseCsv" Content="Browse" Width="100" Background="#2D2D30"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="MSI File:" Width="80" VerticalAlignment="Center"/>
                <TextBox Name="MsiPath" Width="540" Margin="0,0,10,0"/>
                <Button Name="BrowseMsi" Content="Browse" Width="100" Background="#2D2D30"/>
            </StackPanel>

            <GroupBox Header="Authentication" Margin="0,10,0,0" Padding="10" Background="#2a2d2e">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Username:" Width="80" VerticalAlignment="Center"/>
                        <TextBox Name="Username" Width="400"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Password:" Width="80" VerticalAlignment="Center"/>
                        <PasswordBox Name="Password" Width="400"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBox Name="OutputBox" Grid.Row="0" Margin="0,0,0,10"
                     AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                     Background="#252526" Foreground="LightGreen" 
                     FontFamily="Consolas" TextWrapping="Wrap" />

            <ProgressBar Name="InstallProgress" Grid.Row="1" Height="20" 
                         Margin="0,0,0,10" Foreground="#00BFFF"/>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="StartInstall" Content="Start Installation" Width="180" Height="35" Margin="10,0,0,0" Background="#007ACC"/>
            <Button Name="ExportLog" Content="Export Log" Width="120" Height="35" Margin="10,0,0,0" Background="#3a3d41"/>
        </StackPanel>
    </Grid>
</Window>
